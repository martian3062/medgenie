{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": [
    {
      "name": "backend",
      "source": "medgenie_backend",
      "start": "gunicorn medgenie_backend.wsgi",
      "buildCommand": "pip install -r requirements.txt",
      "env": {
        "DJANGO_SECRET_KEY": "production-secret-key",
        "DEBUG": "False",
        "PYTHON_VERSION": "3.10",
        "CORS_ALLOW_ALL_ORIGINS": "True"
      }
    },
    {
      "name": "frontend",
      "source": "MEDGENIE",
      "buildCommand": "npm install && npm run build",
      "start": "npm run preview -- --host 0.0.0.0 --port 3000",
      "env": {
        "VITE_API_URL": "https://medgenie-backend.up.railway.app/api/"
      }
    },
    {
      "name": "signaling",
      "source": "signaling-server",
      "buildCommand": "npm install",
      "start": "node index.js"
    }
  ]
}

